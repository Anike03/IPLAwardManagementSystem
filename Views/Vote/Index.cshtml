@model IEnumerable<IPLAwardManagementSystem.DTOs.VoteDto>
@{
    ViewData["Title"] = "Votes List";
}

<h2>All Votes</h2>

<a asp-action="Create" class="btn btn-success mb-3">Cast New Vote</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Player</th>
            <th>Award</th>
            <th>Voter</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var vote in Model)

        {
            <tr>
                <td>@vote.PlayerName</td>
                <td>@vote.AwardName</td>
                <td>@vote.VoterName</td>
                <td>@vote.VoteDate.ToString("g")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@vote.Id" class="btn btn-info btn-sm">Details</a>
                    <a asp-action="Edit" asp-route-id="@vote.Id" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-id="@vote.Id" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
