@model IPLAwardManagementSystem.DTOs.PlayerAwardCreateDto

@{
    ViewData["Title"] = "Create Nomination";
}

<h1>Create Nomination</h1>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="PlayerId" class="control-label"></label>
        <input asp-for="PlayerId" class="form-control" />
        <span asp-validation-for="PlayerId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AwardId" class="control-label"></label>
        <input asp-for="AwardId" class="form-control" />
        <span asp-validation-for="AwardId" class="text-danger"></span>
    </div>

    <!-- IsWinner field removed because it does not exist in PlayerAwardCreateDto -->

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
