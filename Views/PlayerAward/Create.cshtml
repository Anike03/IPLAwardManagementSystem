@model IPLAwardManagementSystem.DTOs.PlayerAwardCreateDto
@{
    ViewData["Title"] = "Create Nomination";
}

<h2>Create Nomination</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="PlayerId" class="control-label"></label>
        <select asp-for="PlayerId" class="form-control" asp-items="ViewBag.Players"></select>
        <span asp-validation-for="PlayerId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AwardId" class="control-label"></label>
        <select asp-for="AwardId" class="form-control" asp-items="ViewBag.Awards"></select>
        <span asp-validation-for="AwardId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Year</label>
        <input type="date" name="year" class="form-control" />
    </div>
    <div class="form-check">
        <input type="checkbox" name="isWinner" class="form-check-input" />
        <label class="form-check-label">Is Winner</label>
    </div>
    <div class="form-group mt-3">
        <input type="submit" value="Create" class="btn btn-primary" />
    </div>
</form>
