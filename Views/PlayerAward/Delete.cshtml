
@model IPLAwardManagementSystem.DTOs.PlayerAwardDto
@{
    ViewData["Title"] = "Delete Nomination";
}
<h2>Delete Nomination</h2>
<h4>Are you sure you want to delete this nomination?</h4>
<div>
    <dl class="row">
        <dt class="col-sm-2">Player</dt>
        <dd class="col-sm-10">@Model.PlayerName</dd>

        <dt class="col-sm-2">Award</dt>
        <dd class="col-sm-10">@Model.AwardName</dd>

        <dt class="col-sm-2">Year</dt>
        <dd class="col-sm-10">@Model.NominationDate.Year</dd>
    </dl>
</div>
<form asp-action="DeleteConfirmed">
    <input type="hidden" asp-for="PlayerId" />
    <input type="hidden" asp-for="AwardId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
