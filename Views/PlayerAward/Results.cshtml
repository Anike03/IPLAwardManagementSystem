@model IEnumerable<IPLAwardManagementSystem.DTOs.PlayerAwardDto>
@{
    ViewData["Title"] = "Award Results";
}
<h2 class="mb-4">Award Results Summary</h2>
<table class="table table-hover">
    <thead>
        <tr>
            <th>Award</th>
            <th>Player</th>
            <th>Winner</th>
        </tr>
    </thead>
    <tbody>
@foreach (var result in Model)
{
    <tr>
        <td>@result.AwardName</td>
        <td>@result.PlayerName</td>
        <td>@(result.IsWinner ? "Yes" : "No")</td>
    </tr>
}
    </tbody>
</table>