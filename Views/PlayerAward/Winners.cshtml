@{
    ViewData["Title"] = "Award Winners";

    Layout = "~/Views/Shared/_Layout.cshtml";

    var winners = ViewBag.Winners as IEnumerable<dynamic>;
}

<h2 class="mb-4">🏆 Award Winners (Based on Votes)</h2>

<table class="table table-bordered table-striped">
    <thead class="table-dark">
        <tr>
            <th>Player Name</th>
            <th>Award Name</th>
            <th>Status</th>
            <th>Year</th>
        </tr>
    </thead>
    <tbody>
        @if (winners != null && winners.Any())

        {

            foreach (var item in winners)

            {
                <tr>
                    <td>@item.PlayerName</td>
                    <td>@item.AwardName</td>
                    <td>
                        @if (item.Status == "Winner")

                        {
                            <span class="badge bg-success">Winner</span>
                        }

                        else

                        {
                            <span class="badge bg-secondary">Nominated</span>
                        }
                    </td>
                    <td>@item.Year</td>
                </tr>
            }

        }

        else

        {
            <tr>
                <td colspan="4" class="text-center text-muted">No voting results available.</td>
            </tr>
        }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-primary mt-3">➕ Add Past Winner</a>
