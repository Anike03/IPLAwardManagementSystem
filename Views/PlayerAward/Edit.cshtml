
@model IPLAwardManagementSystem.DTOs.PlayerAwardDto
@{
    ViewData["Title"] = "Edit Nomination";
}
<h2>Edit Nomination</h2>
<form asp-action="Edit">
    <input type="hidden" asp-for="PlayerId" />
    <input type="hidden" asp-for="AwardId" />
    <div class="form-group">
        <label asp-for="PlayerName" class="control-label"></label>
        <input asp-for="PlayerName" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="AwardName" class="control-label"></label>
        <input asp-for="AwardName" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label asp-for="NominationDate" class="control-label"></label>
        <input asp-for="NominationDate" class="form-control" type="date" />
    </div>
    <div class="form-group">
        <label asp-for="VotesReceived" class="control-label"></label>
        <input asp-for="VotesReceived" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Year">Year</label>
        <input type="number" name="Year" value="@Model.NominationDate.Year" class="form-control" />
    </div>
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="IsWinner" id="IsWinner" @(Model.IsWinner ? "checked" : "") />
        <label class="form-check-label" for="IsWinner">Is Winner?</label>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
