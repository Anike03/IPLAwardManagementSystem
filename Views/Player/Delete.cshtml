@model IPLAwardManagementSystem.DTOs.PlayerDetailDto
@{
    ViewData["Title"] = "Delete Player";
}

<h2 class="text-danger mb-4">Delete Player</h2>
<h4>Are you sure you want to delete this player?</h4>
<div class="mb-3">
    <strong>@Model.Name</strong> - @Model.Role, @Model.TeamName
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="PlayerId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>