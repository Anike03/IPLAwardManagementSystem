@model IEnumerable<IPLAwardManagementSystem.DTOs.PlayerListDto>
@{
    ViewData["Title"] = "Players";
}

<h2 class="mb-4">Players</h2>
<a asp-action="Create" class="btn btn-success mb-3">Add New Player</a>

<table class="table table-striped">
    <thead class="table-primary">
        <tr>
            <th>Name</th>
            <th>Role</th>
            <th>Age</th>
            <th>Team</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var player in Model)
    {
        <tr>
            <td>@player.Name</td>
            <td>@player.Role</td>
            <td>@player.Age</td>
            <td>@player.TeamName</td>
            <td>
                <a asp-action="Details" asp-route-id="@player.PlayerId" class="btn btn-info btn-sm">Details</a>
                <a asp-action="Edit" asp-route-id="@player.PlayerId" class="btn btn-warning btn-sm">Edit</a>
                <a asp-action="Delete" asp-route-id="@player.PlayerId" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>