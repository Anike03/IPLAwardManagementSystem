@model IEnumerable<IPLAwardManagementSystem.DTOs.VoterDto>
@{
    ViewData["Title"] = "Voter List";
}

<h2>Voter List</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Add New Voter</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var voter in Model)
        {
            <tr>
                <td>@voter.Name</td>
                <td>@voter.Email</td>
                <td>@voter.Role</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@voter.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@voter.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@voter.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>