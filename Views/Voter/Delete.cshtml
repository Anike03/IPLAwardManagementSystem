@model IPLAwardManagementSystem.DTOs.VoterDTO

@{
    ViewData["Title"] = "Delete Voter";
}

<h1>Delete Voter</h1>

<h3>Are you sure you want to delete this voter?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>

        <dt class="col-sm-2">Voter ID</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.VoterId)</dd>

        <dt class="col-sm-2">Role</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Role)</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>