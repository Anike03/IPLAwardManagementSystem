@model IPLAwardManagementSystem.DTOs.VoterDto

@{
    ViewData["Title"] = "Delete Voter";
}

<h2>Delete Voter</h2>

<div class="alert alert-warning">
    <h4>Are you sure you want to delete this voter?</h4>
</div>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name:</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Email:</dt>
            <dd class="col-sm-9">@Model.Email</dd>

            <dt class="col-sm-3">Role:</dt>
            <dd class="col-sm-9">@Model.Role</dd>

            <dt class="col-sm-3">Joined Date:</dt>
            <dd class="col-sm-9">@Model.JoinedDate.ToShortDateString()</dd>
        </dl>
    </div>
</div>

<form asp-action="Delete" method="post" class="mt-3">
    @* ✅ Use asp-action="Delete" to trigger DeleteConfirmed *@
    <input type="hidden" asp-for="VoterId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
