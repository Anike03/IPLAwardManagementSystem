@model IPLAwardManagementSystem.DTOs.VoterDto

@{
    ViewData["Title"] = "Voter Details";
}

<h2>Voter Details</h2>

<div class="card">
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Name:</dt>
            <dd class="col-sm-9">@Model.Name</dd>

            <dt class="col-sm-3">Email:</dt>
            <dd class="col-sm-9">@Model.Email</dd>



            <dt class="col-sm-3">Role:</dt>
            <dd class="col-sm-9">@Model.Role</dd>

            <dt class="col-sm-3">Joined Date:</dt>
            <dd class="col-sm-9">@Model.JoinedDate.ToShortDateString()</dd>

            <dt class="col-sm-3">Verified:</dt>
            <dd class="col-sm-9">@(Model.IsVerified ? "Yes" : "No")</dd>

            <dt class="col-sm-3">Active:</dt>
            <dd class="col-sm-9">@(Model.IsActive ? "Yes" : "No")</dd>
        </dl>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.VoterId" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>