@model IPLAwardManagementSystem.DTOs.VoterDto
@{
    ViewData["Title"] = "Voter Details";
}

<h2>Voter Details</h2>

<div>
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

