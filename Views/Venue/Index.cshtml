@model IEnumerable<IPLAwardManagementSystem.DTOs.VenueDto>
@{
    ViewData["Title"] = "Venues";
}

<h2 class="mb-4">Venues</h2>
<a asp-action="Create" class="btn btn-success mb-3">Add New Venue</a>

<table class="table table-striped">
    <thead class="table-primary">
        <tr>
            <th>Name</th>
            <th>City</th>
            <th>Capacity</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var venue in Model)
    {
        <tr>
            <td>@venue.Name</td>
            <td>@venue.City</td>
            <td>@venue.Capacity</td>
            <td>
                <a asp-action="Details" asp-route-id="@venue.VenueId" class="btn btn-info btn-sm">Details</a>
                <a asp-action="Edit" asp-route-id="@venue.VenueId" class="btn btn-warning btn-sm">Edit</a>
                <a asp-action="Delete" asp-route-id="@venue.VenueId" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>