@model IPLAwardManagementSystem.DTOs.VenueDto
@{
    ViewData["Title"] = "Delete Venue";
}

<h2 class="text-danger mb-4">Delete Venue</h2>
<h4>Are you sure you want to delete this venue?</h4>

<dl class="row">
    <dt class="col-sm-3">Name</dt>
    <dd class="col-sm-9">@Model.Name</dd>

    <dt class="col-sm-3">City</dt>
    <dd class="col-sm-9">@Model.City</dd>

    <dt class="col-sm-3">Capacity</dt>
    <dd class="col-sm-9">@Model.Capacity</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="VenueId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>