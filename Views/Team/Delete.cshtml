@model IPLAwardManagementSystem.DTOs.TeamDetailDto

@{
    ViewData["Title"] = "Delete Team";
}

<h2 class="text-danger mb-4">Delete Team</h2>

<h4>Are you sure you want to delete this team?</h4>
<div class="mb-3">
    <strong>@Model.TeamName</strong> - @Model.HomeCity
</div>

<form asp-action="Delete">
    <input type="hidden" asp-for="TeamId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>