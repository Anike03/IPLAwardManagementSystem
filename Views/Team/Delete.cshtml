@model IPLAwardManagementSystem.Models.Team

@{
    ViewData["Title"] = "Delete Team";
}

<h1>Delete Team</h1>

<h3>Are you sure you want to delete this team?</h3>

<div>
    <h4>Team</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Team Name</dt>
        <dd class="col-sm-10">@Model.TeamName</dd>

        <dt class="col-sm-2">Coach</dt>
        <dd class="col-sm-10">@Model.Coach</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TeamId" />
        <button type="submit" class="btn btn-danger">Delete</button> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>