@model IPLAwardManagementSystem.DTOs.MatchDto
@{
    ViewData["Title"] = "Delete Match";
}

<h2 class="text-danger mb-4">Delete Match</h2>
<p>Are you sure you want to delete this match?</p>

<dl class="row">
    <dt class="col-sm-3">Date</dt>
    <dd class="col-sm-9">@Model.MatchDate.ToShortDateString()</dd>

    <dt class="col-sm-3">Teams</dt>
    <dd class="col-sm-9">@Model.HomeTeamName vs @Model.AwayTeamName</dd>

    <dt class="col-sm-3">Venue</dt>
    <dd class="col-sm-9">@Model.VenueName</dd>
</dl>

<form asp-action="Delete">
    <input type="hidden" asp-for="MatchId" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>